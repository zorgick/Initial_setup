{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "containers/*": ["src/containers/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", ],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "**/*.test.js"]
}