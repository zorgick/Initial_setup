{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "shared/*": ["src/shared/*"],
      "server/*": ["src/server/*"],
      "client/*": ["src/client/*"],
      "config/*": ["config/*"],
      "scripts/*": ["scripts/*"]
    }
  },
  "include": ["src/**/*", "config/**/*", "scripts/**/*", "global.d.ts"],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "**/*.test.js", "coverage"]
}